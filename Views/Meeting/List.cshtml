@model List<UserInfo>
@{
    ViewBag.Title = "Katılımcı Listesi";
}

<main class="text-center">
<h1>Toplantı Katılım Listesi</h1>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Katılım Durumu</th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach(var user in Model){
            var durum = user.WillAttend == true ? "Evet" : "Hayır";
            var className = user.WillAttend == true ? "table-success" : "table-danger";

            if(user.WillAttend == true){
                i++;
            }
            <tr class="@className">
                <td>@user.Name</td>
                <td>@durum</td>
                <td><a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a></td>
            </tr>
        }

       
    </tbody>
</table>

<div class="card">
    <div class="card-body">
        <span>Katılımcı Sayısı: @i</span>
    </div>
</div>
</main>